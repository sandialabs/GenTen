<ParameterList name="ROL">

  <!-- ===========  STEP SUBLIST  =========== -->
  <ParameterList name="Step">
    <Parameter name="Type"      type="string"    value="Line Search"    />
  </ParameterList>

  <!-- ===========  STATUS TEST SUBLIST  =========== -->
  <ParameterList name="Status Test">
    <Parameter name="Gradient Tolerance"   type="double" value="1.e-14" />
    <Parameter name="Constraint Tolerance" type="double" value="1.e-14" />
    <Parameter name="Step Tolerance"       type="double" value="1.e-10" />
    <Parameter name="Iteration Limit"      type="int"    value="1000"   />
  </ParameterList>

  <ParameterList name="Finite Difference Check">
    <Parameter name="Check Gradient" type="bool" value="true"/>
    <Parameter name="Number of Steps" type="int" value="8"/>
    <Parameter name="Largest Step Size" type="double" value="1.0e-1"/>
    <Parameter name="Step Reduction Factor" type="double" value="1.0e-1"/>
    <Parameter name="Finite Difference Order" type="int" value="1"/>
  </ParameterList>

</ParameterList>
